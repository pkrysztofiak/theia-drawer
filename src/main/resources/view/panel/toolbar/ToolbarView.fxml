<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.FlowPane?>

<fx:root type="FlowPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
        <ToggleGroup fx:id="toolsGroup" />
    </fx:define>
	<children>
		<ToggleButton fx:id="pointToolButton" minWidth="64.0" mnemonicParsing="false" selected="true" text="Point" toggleGroup="$toolsGroup" />
		<ToggleButton fx:id="polygonToolButton" minWidth="64.0" mnemonicParsing="false" text="Polygon" toggleGroup="$toolsGroup" />
	</children>
</fx:root>
